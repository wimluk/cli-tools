{
  "name": "@cli-tools/{{name}}",
  "version": "0.1.0",
  "description": "{{description}}",
  "bin": {
    "{{name}}": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:ts": "tsc",
    "dev": "tsx src/cli.ts",
    "dev:watch": "tsx watch src/cli.ts",
    "lint": "eslint . --max-warnings 0",
    "lint:ts": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}